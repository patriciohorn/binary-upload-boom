<%- include('partials/header')%>

  <section class="max-w-7xl mx-auto px-6 py-20">
    <ul class="grid grid-cols-3 gap-x-8 gap-y-12">
      <% posts.forEach(post=> { %>
        <li>
          <a href="/post/<%=post._id%>" data-theme="light" class=" cursor-pointer card bg-base-100 shadow-sm">
            <figure class="aspect-[4/3]">
              <img src="<%=post.image%>" alt="Shoes" class="w-full h-full object-cover" />
            </figure>
            <div class="card-body">
              <div class=" inline-block">
                <div class="mr-2 inline-block">
                  <span class="inline font-bold">
                    <%= post.user.userName %>
                  </span>
                </div>
                <span class="inline">
                  <%= post.caption %>
                </span>
              </div>

              <h2 class="card-title py-2">
                <%=post.title%>
              </h2>

            </div>
          </a>
        </li>
        <% }) %>

    </ul>
  </section>