<%- include('partials/header')%>

  <section class="max-w-7xl mx-auto px-6 py-20">
    <ul class="grid grid-cols-3 gap-x-8 gap-y-12">

      <% posts.forEach(post=> { %>

        <li>
          <a href="/post/<%= post._id %>" data-theme="light" class=" cursor-pointer card bg-base-100  shadow-sm w-fit">
            <figure class="aspect-[4/3]">
              <img src="<%= post.image %>" alt="Shoes" class="w-full h-full bg-cover" />
            </figure>
            <div class="card-body">
              <h2 class="card-title">
                <%=post.title%>
              </h2>
              <p>
                <%=post.caption%>
              </p>
            </div>
          </a>
        </li>
        <% }) %>
    </ul>
  </section>