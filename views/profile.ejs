<%- include('partials/header') %>
  <section class="max-w-7xl mx-auto px-6">
    <div class="flex flex-col justify-center py-12 lg:py-16 space-y-8">
      <h1 class="text-2xl font-bold">Welcome <%= user.charAt(0).toUpperCase() + user.slice(1) %>
      </h1>
      <div class="grid grid-cols-1 lg:grid-cols-[1fr_2fr] space-x-12">
        <!-- Create a new Post -->
        <aside class="self-start p-8 bg-white rounded-lg sticky top-2">
          <h2 class="mb-6 text-2xl font-bold text-gray-950">Create a New Post</h2>
          <form action="/post/createPost" method="POST" enctype="multipart/form-data" data-theme="light">
            <!-- Title -->
            <div class="mb-5">
              <label for="title" class="block mb-2 text-sm font-medium text-gray-900">Title</label>
              <input type="text" id="title" name="title" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary focus:border-primary block w-full p-2.5" required />
            </div>
            <!-- Caption -->
            <div class="mb-5">
              <label for="caption" class="block mb-2 text-sm font-medium text-gray-900">Caption</label>
              <textarea id="caption" name="caption" rows="4" class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-primary focus:border-primary"></textarea>
            </div>
            <!-- File uploading -->
            <div class="mb-5">
              <label class="block mb-2 text-sm font-medium text-gray-900" for="imgUpload">Upload file</label>
              <input id="imgUpload" name="file" type="file" class="file-input rounded-lg focus:outline-offset-0 focus:outline-1 focus-visible:outline-1 w-full" required>
            </div>
            <button type="submit" class="btn btn-secondary btn-lg w-full">Create Post</button>
          </form>
        </aside>
        <!-- User Post Feed -->
        <section>
          <ul class="grid grid-cols-2 gap-x-8 gap-y-8 items-start">
            <!-- Posts -->
            <% posts.forEach(post=> { %>
              <li>
                <a href="/post/<%=post._id%>" data-theme="light" class=" cursor-pointer card bg-base-100 shadow-sm">
                  <figure class="aspect-[4/3]">
                    <img src="<%=post.image%>" alt="Shoes" class="w-full h-full object-cover" />
                  </figure>
                  <div class="card-body">
                    <div class=" inline-block">
                      <div class="mr-2 inline-block">
                        <span class="inline font-bold">
                          <%= user %>
                        </span>
                      </div>
                      <span class="inline">
                        <%= post.caption %>
                      </span>
                    </div>

                    <h2 class="card-title py-2">
                      <%=post.title%>
                    </h2>

                  </div>
                </a>
              </li>
              <% }) %>
          </ul>

        </section>
        <div></div>
      </div>

    </div>
  </section>